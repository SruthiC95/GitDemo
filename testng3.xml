<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="TestNG Suite">
	<test thread-count="5" name="Regression">

		<!-- groups is used to separate the test cases and run it for smoke or sanity-->
		<groups>
			<run>
				<include name="Smoke" />
			</run>
		</groups>

		<!-- Classes/Packages are mandatory  to pull the group to run the test-->
		<classes>
			<class name="test.demo1" />
			<class name="test.demo2" />
			<class name="test.demo3" />
		</classes>
	</test> <!-- Test -->

</suite> <!-- Suite -->